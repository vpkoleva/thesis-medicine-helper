<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp">

    <TextView
            android:id="@+id/manage_results_value_datetime_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_results_value_datetime_label"
            android:labelFor="@+id/manage_results_value_datetime"/>

    <LinearLayout
            android:id="@+id/manage_results_value_datetime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manage_results_value_datetime_label">

        <DatePicker
                android:id="@+id/manage_results_value_date"
                android:calendarViewShown="false"
                style="@style/datetime"/>

        <TimePicker
                android:id="@+id/manage_results_value_time"
                style="@style/datetime"/>
    </LinearLayout>

    <TextView
            android:id="@+id/manage_results_value_measurement_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_results_value_measurement_label"
            android:layout_below="@+id/manage_results_value_datetime"
            android:labelFor="@+id/manage_results_value_measurement"/>

    <EditText
            android:id="@+id/manage_results_value_measurement"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/manage_results_value_measurement_label"
            android:inputType="text"/>

    <Button
            android:id="@+id/manage_results_value_button_cancel"
            style="@style/button_cancel"
            android:layout_below="@+id/manage_results_value_measurement"/>

    <Button
            android:id="@+id/manage_results_value_button_save"
            style="@style/button_save"
            android:layout_below="@+id/manage_results_value_measurement"/>

</RelativeLayout>
